<!DOCTYPE html>
<html>
  <head>
    <title>Night Shift Arcade</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div id="navbar-container">
      <%= link_to "/" do %>
        <div id="logo">
          <h1>Night</h1>
          <h1>Shift</h1>
          <h1>Arcade</h1>
        </div>
      <% end %>
      <% if !current_user %>
        <ul id="nav-menu">
          <%= link_to new_user_registration_path do %>
            <p class="nav-menu-item register">Register</p>
          <% end %>
          <%= link_to new_user_session_path do %>
            <p class="nav-menu-item login">Log in</p>
          <% end %>
        </ul>
      <% else %>
      <div id="nav-menu"> 
        <%= link_to user_path(current_user.slug) do %>
          <i class="fas fa-user"></i>
        <% end %>
        <%= button_to destroy_user_session_path, method: 'delete' do %>
          Sign Out
        <% end %>
        </div>
      <% end %>
      
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
